{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "jsx": "react",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts", "src/index.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
        "./src/**/*"
    ]
  }  
}
